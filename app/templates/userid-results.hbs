{{#if model.allGames.games.length}}
  <div class="row">
    <div class="col-xs-6">
      <h1>{{model.user.personaname}}</h1>
      <h2>Steam ID: {{model.user.steamid}}</h2>
      {{#if model.user.gameextrainfo}}
      <h2>IN GAME: {{model.user.gameextrainfo}}</h2>
      {{/if}}
      <h2>{{get-online-status user=model.user}}</h2>
      <h2>Member since {{get-time-created user=model.user}}</h2>
      <img src={{model.user.avatarfull}}>

      <h2>Location: {{#if model.user.locstatecode}} {{model.user.locstatecode}}{{#if model.user.loccountrycode}}, {{model.user.loccountrycode}}{{/if}}{{else}}{{model.user.loccountrycode}}{{/if}}</h2>

      <p>TF2 backpack is worth: ${{pricing model}} or {{model.metal}} metal</p>

      {{#each model.recentGames as |recentGame|}}
        <h3>{{recentGame.name}}</h3>
        <img src="http://media.steampowered.com/steamcommunity/public/images/apps/{{recentGame.appid}}/{{recentGame.img_icon_url}}.jpg">
        <img src="http://media.steampowered.com/steamcommunity/public/images/apps/{{recentGame.appid}}/{{recentGame.img_logo_url}}.jpg">
      {{/each}}

      {{two-week-data recentGames=model.recentGames}}
      {{#link-to 'all-friends' model.user.steamid }} View Friends {{/link-to}}
      {{data-chart recentGames=model.recentGames}}
    </div>
    <div class="col-xs-6">
      {{top-games-chart allGames=model.allGames}}
      {{user-gamelibrary model=model.allGames}}
    </div>
  </div>
{{else}}
  <h2>Sorry, that profile is set to Private!</h2>
  <br>
  {{#link-to 'userid-search'}}Back{{/link-to}}
{{/if}}
